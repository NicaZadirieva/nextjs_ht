{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-clean-order"
    ],
    "plugins": [
        "stylelint-order",
        "@stylistic/stylelint-plugin"
    ],
    "rules": {
        "color-hex-length": "long",
        "@stylistic/color-hex-case": "upper",
        "@stylistic/indentation": "tab",
        "order/properties-order": [
            {
                "groupName": "cursor",
                "emptyLineBefore": "always",
                "properties": [
                    "cursor"
                ]
            },
            {
                "groupName": "border",
                "emptyLineBefore": "always",
                "properties": [
                    "border",
                    "border-radius",
                    "border-left",
                    "border-right",
                    "border-bottom",
                    "border-top"
                ]
            },
            {
                "groupName": "dimensions",
                "emptyLineBefore": "always",
                "properties": [
                    "height",
                    "width"
                ]
            },
            {
                "groupName": "margins",
                "emptyLineBefore": "always",
                "properties": [
                    "margin",
                    "padding"
                ]
            },
            {
                "groupName": "font",
                "emptyLineBefore": "always",
                "properties": [
                    "font",
                    "font-family",
                    "font-size",
                    "font-weight",
                    "line-height",
                    "letter-spacing"
                ]
            }
        ]
    }
}